<!-- Views/BlogPost/Index.cshtml -->

@model List<AdvancedBlogApp.Models.BlogPost>

    <h2>Blog Posts</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <!-- Add other columns as needed -->
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <!-- Add other columns as needed -->
                <td>
                    <a asp-action="Edit" asp-route-id="@post.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@post.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
